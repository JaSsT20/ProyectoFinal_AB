@page "/r_products"

<EditForm Model="products">
    <div class="card">
        <div class="card-header">
            <h1>Registro de Productos</h1>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <label class="form-label">Nombre del producto</label>
                    <InputText @bind-Value="products.Name" class="form-control"></InputText>
                </div>

                <div class="col-md-5">
                    <label class="form-label">Precio</label>
                    <InputNumber @bind-Value="products.Price" class="form-control"></InputNumber>
                </div>
            <div class="row">
                <div class="clo-md5">
                    <label>Marca</label>
                    <InputText @bind-Value="products.Brand" class="form-control"></InputText>
                </div>

                <div class="col-md5">
                    <label>Fecha de entrada</label>
                    <InputDate @bind-Value="products.EntryDate"></InputDate>
                </div>


            </div>
            </div>

        </div>

        <div class="card-footer">

        </div>



    </div>
    
</EditForm>

@code
{
    public Products products {get; set;} = new Products();

}

